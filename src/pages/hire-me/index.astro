---
import ArrowCardButton from "@components/ArrowCardButton.astro";
import RootPageIndex from "@components/RootPageIndex.astro";

import { CONTACT } from "@consts";
import { resolvePath } from "@lib/utils";

const linkedInContact = CONTACT.find((contact) => contact.type === "LinkedIn");
---

<RootPageIndex title="Hire me" searchable>
  <div class="animate mb-4">
    <p class="mb-1">The PDF resume:</p>
    <section>
      <ArrowCardButton
        href={resolvePath("/hire-me/cblazer_resume.pdf", Astro.url.pathname)}
        text="Download PDF"
        openInNewTab
      />
    </section>
  </div>
  <div class="animate mb-4">
    <p class="mb-1">The TXT resume:</p>
    <section>
      <ArrowCardButton
        href={resolvePath("/hire-me/cblazer_resume.txt", Astro.url.pathname)}
        text="Download TXT"
        openInNewTab
      />
    </section>
  </div>

  {
    linkedInContact && (
      <div class="animate mb-4">
        <p class="mb-1">Or you can check my LinkedIn profile:</p>
        <section>
          <ArrowCardButton
            href={linkedInContact.href}
            text="Navigate to LinkedIn"
            openInNewTab
          />
        </section>
      </div>
    )
  }

  <div class="animate mb-4">
    <h2 class="text-xl font-bold mb-2">Consulting Services</h2>
    <p class="mb-1">
      Need help making sense of your data? I offer consulting services to help small businesses and startups 
      structure, analyze, and automate their data workflows. Whether it's cleaning messy data, building dashboards, 
      or automating tedious manual tasks, I can help.
    </p>
    <p class="mb-1">
      <strong>Services include:</strong>
    </p>
    <ul class="list-disc pl-5 mb-2">
      <li>Data cleaning, transformation, and analysis</li>
      <li>Automating repetitive tasks and workflows</li>
      <li>ETL pipeline development and optimization</li>
      <li>SQL query optimization and database tuning</li>
      <li>BI dashboard development (Power BI, Tableau, Looker)</li>
      <li>Cloud data solutions (AWS, Azure)</li>
    </ul>
    <p class="mb-1"><strong>Pricing:</strong></p>
    <ul class="list-disc pl-5 mb-2">
      <li><strong>Hourly Rate:</strong> $100 - $125/hour</li>
      <li><strong>Project-Based Pricing:</strong> Starting at $2,000</li>
      <li><strong>Initial Consultation:</strong> Free 30-minute discovery call</li>
    </ul>
    <p class="mb-2">Let's talk about your data challenges and how I can help.</p>
    <section>
      <ArrowCardButton
        href="mailto:cblazer@cblazer.co"
        text="Contact Me"
      />
    </section>
  </div>
</RootPageIndex>
